                     , containers
                     , control-bool
                     , data-default-class
                     , data-fix
                     , directory
                     , distribution-nixpkgs
                     , filepath
                     , github
                     , generics-sop
                     , hashable
                     , hnix
                     , hourglass
                     , language-nix
                     , lens
                     , monadplus
                     , optparse-applicative
                     , parsers
                     , pretty
                     , protolude
                     , protolude
                     , req
                     , semigroups
                     , temporary
                     , text
                     , text-format
                     , trifecta
                     , turtle
                     , unordered-containers

